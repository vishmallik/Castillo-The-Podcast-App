<%- include('partials/header') -%>
<main>
    <section class="bg-yellow-200 py-10 pb-28">
        <form action="/podcasts/<%=podcast.id%>" method="post"
            class="flex justify-between flex-col container mx-auto border-2 border-orange-400 rounded-xl border-solid p-6  bg-orange-500 bg-opacity-30">
            <label for="" class="mx-auto text-2xl font-semibold py-2">Edit Podcast</label>
            <input type="text" placeholder="Title" name="title" class="p-3 my-2 mx-10 rounded-lg text-gray-900"
                value="<%=podcast.title%>">
            <input value="<%=podcast.featuring%>" type=" text" placeholder="Featuring" name="featuring"
                class="p-3 my-2 mx-10 rounded-lg text-gray-900">
            <input type="text" value="<%=podcast.img%>" placeholder="Image URL" name="img"
                class="p-3 my-2 mx-10 rounded-lg text-gray-900">
            <textarea name="description" placeholder="description" id="" cols="30" rows="10"
                class="p-3 my-2 mx-10 rounded-lg text-gray-900"><%=podcast.description%></textarea>
            <div class=" p-2 my-2 mx-10 text-white text-xl">
                <%if(podcast.type == "Free"){%>
                <input type="radio" value="Free" name="type" id="free" checked>
                <%} else {%>
                <input type="radio" value="Free" name="type" id="free">

                <%}%>
                <label for="free" class="pr-8">Free </label>
                <%if(podcast.type == "VIP"){%>
                <input type="radio" value="VIP" name="type" id="vip" checked>
                <%} else {%>
                <input type="radio" value="VIP" name="type" id="vip">
                <%}%>
                <label for="vip" class="pr-8">VIP </label>
                <%if(podcast.type == "Premium"){%>
                <input type="radio" value="Premium" name="type" id="premium" checked>
                <%} else {%>
                <input type="radio" value="Premium" name="type" id="premium">
                <%}%>
                <label for="premium">Premium </label>
            </div>
            <input type="text" value="<%=podcast.url%>"" placeholder=" Podcast URL" name="url"
                class="p-3 my-2 mx-10 rounded-lg text-gray-900">

                <input type="submit" value="Edit Podcast"
                    class="p-3 my-2 mx-10 rounded-lg bg-orange-400 font-bold text-xl cursor-pointer">
        </form>
    </section>


</main>
<%-include('partials/footer') -%>