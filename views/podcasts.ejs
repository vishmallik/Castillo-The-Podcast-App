<%- include('partials/header') -%>
<main>
    <section class="bg-yellow-200 relative pb-20">
        <%if(success){%>
        <div class="px-4 font-semibold absolute top-10  left-1/3 text-green-400 text-xl ">
            <p><%=success%></p>
        </div>
        <% }%>
        <%if(success_user && !user.admin){%>
        <div class="px-4 font-semibold absolute top-10  left-1/3 text-green-400 text-xl ">
            <p><%=success_user%></p>
        </div>
        <% }%>


        <div
            class="px-4 font-semibold absolute top-10 right-60 hover:text-red-400 text-xl bg-amber-400 py-2 rounded-lg text-white">
            <a href="/podcasts/new">Add new Podcast</a>
        </div>

        <div class="flex flex-wrap justify-between items-center px-48 pt-28">
            <%podcasts.forEach(podcast=>{%>
            <div class="rounded-2xl basis-1/4 relative overflow-hidden m-8 bg-white">
                <p class="absolute top-5 font-bold bg-pink-600  left-4 text-white px-4 py-2 rounded-xl">
                    <%=podcast.type%></p>
                <div><img class="w-full" src=<%=podcast.img%> alt=""></div>
                <div class="mx-4 my-2 mb-6">
                    <h2 class="text-xl font-bold py-2"> <%=podcast.title%></h2>
                    <h3 class="">
                        <%podcast.featuring.forEach(person=>{%>
                        <span> <%=person%></span>,
                        <%})%>
                    </h3>
                    <p class="py-4 pb-6 text-justify"><%=podcast.description.substring(0,120) + "..."%></p>
                    <a href="<%=podcast.url%>" class="bg-orange-400 rounded-lg px-4 my-4 py-2 inline-block">Listen
                        now</a>
                    <% if(user.admin){%>
                    <div>
                        <%if(!podcast.isVerified){%>
                        <a href="/podcasts/<%=podcast.id%>/verify"
                            class="bg-green-400 rounded-md py-1 mr-4 px-4 inline-block">Verify</a>
                        <%}%>
                        <a href="/podcasts/<%=podcast.id%>/edit"
                        class="bg-blue-400 rounded-md py-1 px-4 inline-block">Edit</a>
                        <a href="/podcasts/<%=podcast.id%>/delete"
                            class="bg-red-400 rounded-md py-1 px-4  ml-4 inline-block">Delete</a>
                    </div>

                    <%}%>

                </div>

            </div>
            <%})%>
                </div>

    </section>
</main>
<%- include('partials/footer') -%>